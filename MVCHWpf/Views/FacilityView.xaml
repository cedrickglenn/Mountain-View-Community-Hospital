<UserControl x:Class="MVCHWpf.Views.FacilityView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVCHWpf.Views.PatientViews"
        mc:Ignorable="d"
        d:DesignHeight="450" d:DesignWidth="800" Background="#009ABB" Margin="-1"  >
    <Grid>
        <TabControl Background="Transparent">
            <TabItem Header="Facility" FontSize="14" Width="125" FontWeight="Medium" x:Name="FacilityTab" />
            <TabItem Header="Work Unit" FontSize="14" Width="125" FontWeight="Medium" x:Name="WorkUnitTab" />
            <TabItem Header="Ward" FontSize="14" Width="125" FontWeight="Medium" x:Name="WardTab" />   
            <TabItem Header="Bed"  Width="125"  FontSize="14" FontWeight="Medium" x:Name="BedTab"/>   
        </TabControl>
    </Grid>
</UserControl>
